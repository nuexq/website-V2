---
interface Props {
  href: string;
}
const { href } = Astro.props;
const currentPath = `/${Astro.url.pathname.split("/")[1]}`;

const normalizedHref = href.startsWith("/") ? href : `/${href}`;
const isActive = currentPath === normalizedHref;
---

<a
  href={normalizedHref}
  class="text-background/80 transition-colors hover:text-background aria-[current='page']:text-background"
  {...isActive ? { "aria-current": "page" } : {}}
>
  <slot />
</a>
