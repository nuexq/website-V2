---
interface Props {
  title: string;
  isoStringDate: string;
  formattedDate: string;
}
const { title, isoStringDate, formattedDate } = Astro.props;
---

<h1 class="text-4xl leading-[1.3] tracking-[-0.015em] font-display">
  <span transition:name=`writingCard-${title}`>
    {title}
  </span>
</h1>

<p class="mt-3 leading-relaxed prose">
  <time
    datetime={isoStringDate}
    class="text-sm"
    transition:name=`writingCard-${isoStringDate}`>{formattedDate}</time
  >
</p>

<hr class="mt-7 mb-2 border-accent/20" />
