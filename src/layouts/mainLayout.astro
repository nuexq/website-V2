---
interface Props {
  title: string;
}
import "../styles/global.css";
const { title } = Astro.props;
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main
      class="mx-auto w-full max-w-[120ch] px-6 py-8 prose flex flex-col items-center gap-12"
    >
      <div class="w-full max-w-[80ch] px-4 md:px-0 flex flex-col gap-8">
        <article>
          <slot />
        </article>
        <Footer />
      </div>
    </main>
  </body>
</html>
