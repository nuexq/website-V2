---
import "../styles/global.css";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import Head from "@/components/layout/Head.astro";
import { cn } from "@/lib/utils";

interface Props {
  title: string;
  description: string;
  enableProse: boolean;
  publishedTime: string;
}
const { title, description, enableProse, publishedTime } = Astro.props;
---

<html lang="en">
  <Head title={title} description={description} publishedTime={publishedTime} />
  <body class="mx-auto flex min-h-screen flex-col gap-8">
    <Header />
    <main
      class="mx-auto flex w-full max-w-[80ch] flex-col px-10 md:px-6 py-8 lg:px-0"
    >
      <slot name="header" />
      <article class={cn("max-w-none", enableProse && "prose")}>
        <slot />
      </article>
      <Footer />
    </main>
  </body>
</html>
