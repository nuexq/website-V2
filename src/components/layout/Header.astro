---
import NavLink from "@/components/NavLink.astro";
import { siteConfig } from "@/config/site";

let currentPath = Astro.url.pathname;
const pathSegments = currentPath.split("/");
const cleanPath = `/${pathSegments[1]}`;
---

<header
  x-data="{
    isOpen: false,
    isMobile: window.innerWidth < 640,
    init() {
      this.isMobile = window.innerWidth < 640;
      if (!this.isMobile) { this.isOpen = true; }
    }
  }"
  @resize.window=`
    isMobile = window.innerWidth < 640;
    if (!isMobile) { isOpen = true; }
  `
  class="flex flex-col justify-between bg-foreground px-12 py-3 text-background sm:flex-row sm:items-center"
>
  <div class="flex items-center justify-between">
    <div class="font-display text-xl">
      <a href="/">{siteConfig.name}</a>
      <span class="text-xs text-background/90 sm:hidden">{cleanPath}</span>
    </div>
    <button
      class="cursor-pointer text-sm sm:hidden"
      @click="isOpen = !isOpen"
      :aria-expanded="isOpen.toString()"
      aria-controls="main-nav"
      aria-label="Toggle menu"
    >
      Menu
    </button>
  </div>

  <div x-show="isOpen" x-collapse.duration.400ms class="sm:hidden [&[x-cloak]]:hidden" x-cloak>
    <nav
      id="main-nav"
      aria-label="Main navigation"
      :aria-hidden="isMobile ? (isOpen ? 'false' : 'true') : 'false'"
      class="pt-6 pb-1"
    >
      <div class="flex items-start gap-6">
        <NavLink href="/" x-on:click="isOpen = false">Home</NavLink>
        <NavLink href="/projects" x-on:click="isOpen = false">Projects</NavLink>
        <NavLink href="/writing" x-on:click="isOpen = false">Writing</NavLink>
      </div>
    </nav>
  </div>

  <div class="hidden sm:block">
    <nav id="main-nav" aria-label="Main navigation" class="opacity-100">
      <div class="flex items-start gap-6">
        <NavLink href="/">Home</NavLink>
        <NavLink href="/projects">Projects</NavLink>
        <NavLink href="/writing">Writing</NavLink>
      </div>
    </nav>
  </div>
</header>
