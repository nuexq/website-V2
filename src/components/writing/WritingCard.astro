---
interface Props {
  title: string;
  description: string;
  slug: string;
  isoStringDate: string;
  formattedDate: string;
}
const { title, formattedDate, isoStringDate, description, slug } = Astro.props;
---

<li>
  <article class="flex flex-col gap-1">
    <div
      class="flex flex-col items-start justify-between gap-1 sm:flex-row sm:gap-2"
    >
      <h3 class="text-xl font-semibold">
        <a href={`/writing/${slug}`}>{title}</a>
      </h3>
    </div>
    <div>
      <span>{description}</span>
      <span>-</span>
      <span class="text-sm text-muted-foreground">
        <time dateTime={isoStringDate}>{formattedDate}</time>
      </span>
    </div>
  </article>
</li>
