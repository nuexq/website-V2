---
import { cn } from "@/lib/utils";
interface Props {
  href: string;
}
const { href } = Astro.props;
const currentPath = Astro.url.pathname;
---

<a
  href={`/${href}`}
  class={cn(
    "text-background/80 text-sm", // flex gap-1
    currentPath === `/${href}` ? "text-background" : "hover:text-background",
  )}
>
  <!-- {currentPath === `/${href}` ? <span class="size-[6px] self-center bg-background"></span> : null} -->
  <slot />
</a>
