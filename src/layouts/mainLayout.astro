---
import "../styles/global.css";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import { siteConfig } from "@/config/site";
import { cn } from "@/lib/utils";

interface Props {
  title: string;

  description: string;
  enableProse: boolean;
}
const { title, description, enableProse } = Astro.props;
import { SEO } from "astro-seo";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <SEO
      title={`${title} - ${siteConfig.name}`}
      description={description}
      canonical={`${siteConfig.url}${Astro.url.pathname}`}
    />
    <meta name="author" content={siteConfig.author} />
    <meta name="theme-color" content="#F9F4DC" />
    <link href={siteConfig.links.github} rel="me" />
  </head>
  <body class="mx-auto flex min-h-screen flex-col gap-8">
    <Header />
    <main
      class="mx-auto flex w-full max-w-[80ch] flex-col px-10 md:px-6 py-8 lg:px-0"
    >
      <slot name="header" />
      <article class={cn("max-w-none", enableProse && "prose")}>
        <slot />
      </article>
      <Footer />
    </main>
  </body>
</html>
