---
interface Props {
  title: string;
  description: string;
  slug: string;
  isoStringDate: string;
  formattedDate: string;
  tags: string[];
}
const { title, formattedDate, isoStringDate, description, slug, tags } =
  Astro.props;
---

<li>
  <div class="flex flex-col gap-1">
    <div
      class="flex flex-col items-start justify-between gap-1 sm:flex-row sm:gap-2"
    >
      <h3 class="text-lg">
        <a
          href={`/writing/${slug}`}
          class="transition-colors duration-300 ease-in-out border-b-2 border-b-foreground/10 hover:border-b-foreground/60 hover:bg-foreground/5 first-letter:uppdercase"
        >
          <span transition:name=`writing-${title}`>{title}</span>
        </a>
      </h3>
      <div class="text-sm text-muted-foreground">
        <time
          datetime={isoStringDate}
          transition:name=`writing-${title}-${isoStringDate}`
          >{formattedDate}</time
        >
      </div>
    </div>
    <p>
      <span>{description}</span>
      {
        tags.length > 0 && (
          <span>Â·</span>
          <span class="inline-flex gap-1 prose"> 
            {tags?.map((tag) => (
              <mark class="text-xs px-1 ">{tag}</mark>
            ))}
          </span>
        )
      }
    </div>
  </div>
</li>
