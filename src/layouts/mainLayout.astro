---
interface Props {
  title: string;
}
import "../styles/global.css";
const { title } = Astro.props;
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-[120ch] px-8 py-4 prose flex flex-col gap-8">
      <div class="flex flex-col w-[95%] md:w-[90%] max-w-[80ch]">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>
