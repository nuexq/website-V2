---
import { getCollection } from "astro:content";
import MainLayout from "@/layouts/mainLayout.astro";
import WritingHeader from "@/layouts/writingHeader.mdx";
import { getEntry } from "astro:content";
import { formateDate } from "@/lib/utils";

export async function getStaticPaths() {
  const posts = await getCollection("writing");

  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post = await getEntry("writing", slug);
if (!post) return Astro.redirect("/404");

const { title, date, description, edited } = post.data;
const { Content } = await post.render();

const isoStringDate = date.toISOString();
const formattedDate = formateDate(date);

const isoStringEdited = edited ? edited.toISOString() : null;
const formattedEdited = edited ? formateDate(edited) : null;
---

<MainLayout title={title}>
  <WritingHeader
    title={title}
    description={description}
    date={{ formattedDate, isoStringDate }}
    edited={formattedEdited ? { formattedEdited, isoStringEdited } : null}
  />
  <Content />
</MainLayout>
