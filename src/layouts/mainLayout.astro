---
interface Props {
  title: string;
}
import "../styles/global.css";
const { title } = Astro.props;
import Header from "../components/Header.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main
      class="mx-auto prose flex w-full flex-col px-8 pb-8 max-md:pt-12 sm:px-12 md:max-w-screen-md"
    >
      <slot />
    </main>
  </body>
</html>
