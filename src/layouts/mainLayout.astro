---
interface Props {
  title: string;
}
import "../styles/global.css";
const { title } = Astro.props;
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { siteConfig } from "@/config/site";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} - {siteConfig.name}</title>
  </head><body>
    <Header />
    <main
      class="mx-auto prose flex w-full max-w-[120ch] flex-col items-center gap-12 px-6 py-8"
    >
      <div class="flex w-full max-w-[80ch] flex-col gap-8 px-4 md:px-0">
        <article>
          <slot />
        </article>
        <Footer />
      </div>
    </main>
  </body>
</html>
