---
import { getCollection } from "astro:content";
import Default from "@/layouts/Default.astro";
import PostContentHeader from "@/layouts/components/PostContentHeader.astro";
import Comments from "@/components/Comments.astro";
import { getEntry } from "astro:content";
import { formateDate, type Post, type PostData } from "@/lib/utils";

export async function getStaticPaths() {
  const posts = await getCollection("writing");

  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
const post: Post = await getEntry("writing", slug);
if (!post) return Astro.redirect("/404");

const { title, description, date }: PostData = post.data;
const { Content } = await post.render();

const isoStringDate = date.toISOString();
const formattedDate = formateDate(date);
let layoutProps = {
  title: title,
  description: description,
  enableProse: true,
  publishedTime: isoStringDate,
};
---

<Default {...layoutProps}>
  <PostContentHeader slot="header" title={title} isoStringDate={isoStringDate} formattedDate={formattedDate} />

  <Content />
  <Comments />
</Default>
