---
import { siteConfig } from "../../config/site";

interface Props {
  name: string;
  description: string;
  link?: string;
  slug: string;
  tech: string[];
  type: string;
}

const { name, description, link, slug, tech, type } = Astro.props;
---

<li class="mb-2">
  <span class="group relative">
    <a href={`${siteConfig.links.github}/${slug}`} class="text-link">
      {name}
    </a>
    <div
      class="top-[calc(100% - 1px)] pointer-events-none absolute left-0 z-10 mt-2 w-full max-w-sm min-w-sm bg-foreground p-4 opacity-0 shadow-lg transition-opacity duration-100 ease-in-out group-hover:pointer-events-auto group-hover:opacity-100"
    >
      <div class="flex w-full flex-wrap items-center justify-between gap-3 text-xs">
        <div class="font-body font-medium !text-background">
          {tech.join(" â€¢ ")}
        </div>
        <div class="flex gap-4">
          <a
            href={`${siteConfig.links.github}/${slug}`}
            class="border-none !text-background/80 hover:!text-background"
          >
            GitHub
          </a>
          {
            link && (
              <a
                href={link}
                class="border-none !text-background/80 first-letter:uppercase hover:!text-background"
              >
                {type}
              </a>
            )
          }
        </div>
      </div>
    </div>
  </span>
  <span>{description}</span>
</li>
