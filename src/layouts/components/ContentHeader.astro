---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<h1 class="text-4xl leading-[1.3] tracking-[-0.015em] font-display">
  <span transition:name=`writing-${title}`>
    {title}
  </span>
</h1>

<div class="!max-w-full prose">
  <slot />
</div>

<hr class="mt-7 mb-2 border-accent/20" />
